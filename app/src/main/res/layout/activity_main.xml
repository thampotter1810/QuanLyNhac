<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#07894f"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">

    <ImageView

        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:textColor="#dccaca"
        android:layout_gravity="center"
        android:text="Đăng Nhập"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout

        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edusername"
            android:inputType="text"
            android:textColorHint="#dccaca"
            android:gravity="center"
            android:hint="User name"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edpassword"
            android:textColorHint="#dccaca"
            android:hint="Password"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnlogin"
            android:textColor="#fff"
            android:background="#022b5c"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:text="Đăng nhập"
            android:textSize="25sp"
            android:ems="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvquenpass"
            android:textSize="15sp"
            android:textColor="#dccaca"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:text="Quên mật khẩu?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvdangkymoi"
            android:textSize="15sp"
            android:textColor="#dccaca"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Chưa có tài khoản. Đăng ký mới..."
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvboqua"
            android:textColor="#dccaca"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:gravity="bottom|end"
            android:textSize="15sp"
            android:text="Bỏ qua đăng nhập >>"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>